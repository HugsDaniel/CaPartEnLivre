<div class="container">
  <% if @groups %>
    <h3 class="header">Mes groupes</h3>
    <% @groups.each do |group| %>
      <%= link_to group_path(group), class: "book-details" do %>
        <div class="card-product">
          <% if group.image %>
            <%= cl_image_tag group.image, crop: :fill, width: 120, height: 120 %>
          <% else %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <% end %>
          <div class="card-product-infos">
            <h2><%= group.name %></h2>
            <p><small><%= pluralize(group.members.count, 'membre', plural: 'membres') %></small></p>
          </div>
          <div class="card-product-right">
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    Vous n'avez aucun groupe !
  <% end %>
</div>
