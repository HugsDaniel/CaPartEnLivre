<div class="book-details">
  <div class="card-product">
    <a class="book-link" data-toggle="collapse" href="#seriesDetailsCollapse<%= index %>" role="button" aria-expanded="false" aria-controls="seriesDetailsCollapse<%= index %>">
      <% if series.poster_path %>
        <%= cl_image_tag series.poster, crop: :fill, height: 80 %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" style="width: 70px;" />
      <% end %>
      <div class="card-product-infos">
        <h2><%= series.title %></h2>
        <p><%= series.release_date %></p>
        <p><small>Recommandé par <%= series.user.first_name.capitalize %></small></p>
      </div>
      <div class="card-product-right">
        <%= render 'like', resource: series %>
      </div>
    </a>
  </div>
</div>
<div class="collapse book-description" id="seriesDetailsCollapse<%= index %>">
  <div class="card-trip">
    <div class="card-trip-infos">
      <div>
        <% if series.owner_comment.present? || series.owner_grade.present? %>
          <div>
            <p><strong><%= series.user.first_name %> dit :</strong></p>
            <p><%= series.owner_grade || "-" %>/5 </p>
            <p><%= series.owner_comment %></p>
          </div>
          <br>
        <% end %>

        <h2><%= series.release_date[0, 4] %></h2>
        <p><strong>Résumé</strong></p>
        <p><%= series.overview %></p>
      </div>
    </div>
  </div>
</div>
