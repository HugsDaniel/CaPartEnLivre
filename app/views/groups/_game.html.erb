<div class="book-details">
  <div class="card-product">
    <a class="book-link" data-toggle="collapse" href="#gameDetailsCollapse<%= index %>" role="button" aria-expanded="false" aria-controls="gameDetailsCollapse<%= index %>">
      <% if game.background_image %>
        <%= cl_image_tag game.background_image, crop: :fill, height: 80, width: 120; %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" style="width: 70px;" />
      <% end %>
      <div class="card-product-infos">
        <h2><%= game.name %></h2>
        <p><%= game.released %></p>
        <p><small>Recommand√© par <%= game.user.first_name.capitalize %></small></p>
      </div>
    </a>
    <div class="card-product-right">
      <div class="card-product-right">
        <%= render 'like', resource: game %>
      </div>
    </div>
  </div>
</div>

<div class="collapse book-description" id="gameDetailsCollapse<%= index %>">
  <div class="card-trip">
    <div class="card-trip-infos">
      <div>
        <% if game.owner_comment.present? || game.owner_grade.present? %>
          <div>
            <p><strong><%= game.user.first_name %> dit :</strong></p>
            <%= display_stars(game.owner_grade).html_safe %>
            <p><%= game.owner_comment %></p>
          </div>
          <br>
        <% end %>
        <p><strong>Devs :</strong> <%= game.devs.join(", ") %></p>
        <p><strong>Plateformes :</strong> <%= game.platforms.join(", ") %></p>
        <p><strong>Genres :</strong> <%= game.genres.join(", ") %></p>
        <br>
        <h2>Description</h2>
        <p><%= game.description.html_safe %></p>
      </div>
    </div>
  </div>
</div>
