<div class="book-details">
  <div class="card-product">
    <a class="book-link" data-toggle="collapse" href="#bookDetailsCollapse<%= index %>" role="button" aria-expanded="false" aria-controls="bookDetailsCollapse<%= index %>">
      <% if podcast.image %>
        <%= cl_image_tag podcast.image, crop: :fill, height: 68, width: 68 %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" style="width: 70px;" />
      <% end %>
      <div class="card-product-infos">
        <h2><%= podcast.title %></h2>
        <p><%= podcast.publisher %></p>
        <p><small>Recommandé par <%= podcast.user.first_name.capitalize %></small></p>
      </div>
    </a>
    <div class="card-product-right">
      <%= render 'shared/like', resource: podcast %>
    </div>
  </div>
</div>

<div class="collapse book-description" id="bookDetailsCollapse<%= index %>">
  <div class="card-trip">
    <div class="card-trip-infos">
      <div>
        <% if podcast.owner_comment.present? || podcast.owner_grade.present? %>
          <div>
            <p><strong><%= podcast.user.first_name %> dit :</strong></p>
            <%= display_stars(podcast.owner_grade).html_safe %>
            <p><%= podcast.owner_comment %></p>
          </div>
          <br>
        <% end %>
        <p><strong>Résumé</strong></p>
        <p><%= podcast.description %></p>
      </div>
    </div>
  </div>
</div>

