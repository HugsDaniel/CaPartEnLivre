<% content_for :action do %>
  <%= link_to group_podcasts_path(@group), class: "navbar-brand" do %>
    <i class="fas fa-arrow-left fa-lg"></i>
  <% end %>
<% end %>
<% content_for :title do %>
  <%= link_to group_podcasts_path(@group) do %>
    <%= cl_image_tag (@group.image), crop: :fill, width: 40, height: 40, class: "avatar" %>
    Recommander un podcast
  <% end %>
<% end %>

<div class="container">
  <div class="book-search">
    <%= simple_form_for :search, url: new_group_podcast_path(@group), method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Chercher un podcast..." />
        <button type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>

  <% if @podcasts %>
    <% if @podcasts.any? %>
      <%@podcasts.each_with_index do |podcast, index| %>
        <%= render 'podcast_search', podcast: podcast, index: index %>
      <% end %>
    <% else %>
      <p>Aucun résultat...</p>
    <% end %>
  <% else %>
    <p>Effectuez une recherche pour voir les résultats!</p>
  <% end %>
</div>
