<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://upload.wikimedia.org/wikipedia/commons/0/0e/Clementinum_library.jpg);">
  <div class="container">
    <h1><%= @group.name %></h1>
  </div>
</div>

<div class="container">
  <div class="book-search">
    <%= simple_form_for :search, url: new_group_book_path(@group), method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Chercher un livre..." />
        <button type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>

  <% if @books %>
    <% if @books.any? %>
      <%@books.each_with_index do |book, index| %>
        <%= render 'book', book: book, index: index %>
      <% end %>
    <% else %>
      <p>Aucun résultat...</p>
    <% end %>
  <% else %>
    <p>Effectuez une recherche pour voir les résultats!</p>
  <% end %>
</div>
