<% content_for :title do %>
  <%= cl_image_tag (@group.image), crop: :fill, width: 40, height: 40, class: "avatar" %>
  <%= link_to @group.name, group_path(@group) %>
<% end %>

<div class="container">
  <div class="book-search">
    <%= simple_form_for :search, url: new_group_book_path(@group), method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Chercher un livre..." />
        <button type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>

  <% if @books %>
    <% if @books.any? %>
      <%@books.each_with_index do |book, index| %>
        <%= render 'book', book: book, index: index %>
      <% end %>
    <% else %>
      <p>Aucun résultat...</p>
    <% end %>
  <% else %>
    <p>Effectuez une recherche pour voir les résultats!</p>
  <% end %>
</div>
